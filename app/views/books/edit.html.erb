<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @book.errors %>
      <%= @book.errors.count %>error
       <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
        </ul>
      <% end %>

  		<h1>Editing Book</h1>
  		<%= form_with model: @book do |f| %>
    <div class="form-group">
    <h4>Title</h4>
    </div>

    <%= f.text_field :title%>

    <div class="form-group">
    <h4>Opinion</h4>
    </div>

    <%= f.text_area :body%>

    <br>
  <nav>
     <%= f.submit 'Update Book',class: "btn btn-success" %>
  </nav>
  <% end %>
  		<%= link_to 'Show', book_path(@book.id) %> |
  		<%= link_to 'Back', books_path, class: "back" %>

  </div>
</div>
</div>